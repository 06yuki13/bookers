<body>
  <p id="notice"></p>
<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
     <% @books.each do |book| %>
    <tr>
      <td>
      <span><%= book.title %></span>
      </td>
      <td>
        <span><%= book.body %></span>
        </td>
        <td>
          <%= link_to "Show",book_path(book.id) %>
        </td>
        <td>
          <%= link_to "Edit",book_path(book.id) %>
        </td>
        <td>
          <%= link_to "Destroy",book_path(book.id) %>
        </td>

    </tr>
    <% end %>
  </thead>

  <tbody>
    <tr></tr>
  </tbody>

</table>

<h1>New book</h1>
<%= form_with model: @book do |f| %>

<h4>title</h4>
<%= f.text_field :title %>

<h4>body</h4>
<%= f.text_area :body %>

<%= f.submit 'Create Book' %>

<% end %>
</body>
